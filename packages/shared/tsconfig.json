{
  "compilerOptions": {
    "composite": true,  // <-- This is required for references
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
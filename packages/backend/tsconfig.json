{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@chat-platform/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
}
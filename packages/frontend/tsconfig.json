{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@chat-platform/shared/*": ["../../packages/shared/src/*"]  // <-- Ensures TS resolves shared during type checking
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/shared" }  // <-- Adjusted relative path (from frontend to shared)
  ]
}
{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@chat-platform/shared/*": ["../shared/src/*"]  // <-- Correct relative path from frontend to shared
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" }  // <-- Correct relative path to shared's folder (not tsconfig.json)
  ]
}